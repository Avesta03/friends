<% content_for :title, "Friends" %>

<h1>Friend List</h1>

<% if user_signed_in? %>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>
   

<div id="friends">
  <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
    <%= render friend %>
    <p>
      <%= link_to "Show this friend", friend %>
    </p>
  <% end %>
  <% end %>
</div>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
<% else %>

<h1>Hello World!</h1>
This is my first Rails webpage...

<% end %>


